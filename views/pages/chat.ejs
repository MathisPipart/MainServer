<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <style>
        /* General Chat Styling */
        .chat-title, .news-title {
            color: #333;
            text-align: center;
            margin-bottom: 10px;
        }

        .chat-container {
            background-color: #f3f8ff;
            border-right: 2px solid #ccc;
        }

        .news-container {
            background-color: #fffaf3;
        }

        .chat-history, .news-history {
            height: 600px;
            overflow-y: auto;
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 15px;
            background-color: #f9f9f9;
        }

        .message-container {
            margin-bottom: 10px;
            padding: 10px;
            border-radius: 8px;
            background-color: #eaf4ff;
            border: 1px solid #b5d8ff;
            box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.1);
        }

        .news-history .message-container {
            background-color: #fff2e6;
            border: 1px solid #ffcba4;
        }

        .message-container .message-date {
            font-size: 0.85em;
            color: #888;
            margin-bottom: 5px;
        }

        .message-container .message-text {
            font-size: 1em;
            color: #333;
        }

        /* Input Area Styling */
        .input-area {
            margin-top: 15px;
        }

        .input-area .form-control {
            border-radius: 20px;
        }

        .input-area .btn {
            border-radius: 20px;
        }
    </style>
</head>
<body onload="init()" class="container-fluid">
    <div id="chat_interface" class="row">
        <!-- Chat Section -->
        <div id="chat_container" class="col-md-6 chat-container">
            <h2 id="chat_title" class="chat-title">Film Chat</h2>
            <div class="mb-3 d-flex align-items-center">
                <div id="who_you_are" class="me-2" style="font-weight: bold;"></div>
                <span>, you are in the room:</span>
                <div id="in_room" class="ms-2" style="font-weight: bold;"></div>
            </div>

            <!-- Chat History -->
            <div id="chat_history" class="chat-history">
                <p id="chat_loading_message" style="text-align: center; display: none; color: #888;">Loading chat...</p>
            </div>

            <!-- Chat Input -->
            <div id="chat_box" class="input-area">
                <form onsubmit="sendChatText(); return false;" class="d-flex">
                    <input type="text" id="chat_input" name="chat_input" class="form-control me-2" placeholder="Your message">
                    <button type="submit" class="btn btn-primary">Send</button>
                </form>
            </div>
        </div>

        <!-- News Section -->
        <div id="news_container" class="col-md-6 news-container">
            <h2 class="news-title">General Chat</h2>
            <div class="mb-3" style="font-weight: bold;">News & Events</div>

            <!-- News History -->
            <div id="news_history" class="news-history">
                <p id="news_loading_message" style="text-align: center; display: none; color: #888;">Loading news...</p>
            </div>

            <!-- News Input -->
            <div id="news_box" class="input-area">
                <form onsubmit="sendNewsText(); return false;" class="d-flex">
                    <input type="text" id="news_input" name="news_input" class="form-control me-2" placeholder="Your message">
                    <button type="submit" class="btn btn-secondary">Send</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
